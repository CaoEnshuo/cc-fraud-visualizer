@article{Alfaiz2022Enhanced,
  title = {Enhanced Credit Card Fraud Detection Model Using Machine Learning},
  author = {Alfaiz, Noor Saleh and Fati, Suliman Mohamed},
  journal = {Electronics},
  volume = {11},
  number = {4},
  pages = {662},
  year = {2022},
  doi = {10.3390/electronics11040662},
  abstract = {This study investigates 66 machine learning models to improve fraud detection, using a two-stage evaluation with stratified K-fold cross-validation on a European cardholder dataset. In the second stage, 19 resampling techniques are applied to top-performing algorithms from the first. The AllKNN-CatBoost combination achieves the best results, outperforming previous models with an AUC of 97.94%, Recall of 95.91%, and F1-Score of 87.40%.},
  keywords = {credit card fraud, fraud detection, machine learning, CatBoost, XGBoost, random forest, class imbalance}
}

@article{Bakhtiari2023EnsembleData,
  title = {Credit Card Fraud Detection Using Ensemble Data Mining Methods},
  author = {Bakhtiari, Saeid and Nasiri, Zahra and Vahidi, Javad},
  journal = {Multimedia Tools and Applications},
  volume = {82},
  pages = {29057--29075},
  year = {2023},
  doi = {10.1007/s11042-023-14698-2},
  abstract = {This study applies ensemble learning techniques, specifically LightGBM and LiteMORT, to credit card fraud detection. The models are combined using simple and weighted averaging methods, achieving high accuracy and efficiency across multiple evaluation metrics including AUC and F1-score.},
  keywords = {Credit card, Fraud detection, Boosting, Ensemble learning, LiteMORT, LightGBM}
}

@article{Carcillo2019HybridLearning,
  title = {Combining Unsupervised and Supervised Learning in Credit Card Fraud Detection},
  author = {Carcillo, Fabrizio and Le Borgne, Yann-Aël and Caelen, Olivier and Kessaci, Yacine and Oblé, Frédéric and Bontempi, Gianluca},
