@article{Ganji2023SSPO,
  title = {Shuffled Shepherd Political Optimization-Based Deep Learning Method for Credit Card Fraud Detection},
  author = {Ganji, Venkata Ratnam and Chaparala, Aparna and Sajja, Radhika},
  journal = {Concurrency and Computation: Practice and Experience},
  volume = {35},
  number = {10},
  pages = {e7666},
  year = {2023},
  doi = {10.1002/cpe.7666},
  abstract = {This paper introduces the Shuffled Shepherd Political Optimization-based Deep Residual Network (SSPO-based DRN) for detecting credit card fraud. The method integrates Political Optimization and Shuffled Shepherd Optimization for efficient training. Techniques such as quantile normalization, Fisher score, and class information gain are used for preprocessing and feature selection. Data augmentation further enhances detection accuracy.},
  keywords = {deep residual network, political optimization approach, quantile normalization, shuffled shepherd optimization algorithm}
}

@article{Khalid2024Ensemble,
  title = {Enhancing Credit Card Fraud Detection: An Ensemble Machine Learning Approach},
  author = {Khalid, Abdul Rehman and Owoh, Nsikak and Uthmani, Omair and Ashawa, Moses and Osamor, Jude and Adejoh, John},
  journal = {Big Data and Cognitive Computing},
  volume = {8},
  number = {1},
  pages = {6},
  year = {2024},
  doi = {10.3390/bdcc8010006},
  abstract = {This paper presents an ensemble machine learning model integrating SVM, KNN, Random Forest, Bagging, and Boosting classifiers to detect credit card fraud. Techniques such as under-sampling and SMOTE are employed to handle dataset imbalance. The ensemble outperforms individual models across multiple metrics, providing a robust framework for real-world fraud detection.},
  keywords = {credit card fraud detection, ensemble model, machine learning, data imbalance, Synthetic Minority Over-sampling Technique, deep learning}
}

@article{Kim2019Champion,
  title = {Champion-Challenger Analysis for Credit Card Fraud Detection: Hybrid Ensemble and Deep Learning},
  author = {Kim, Eunji and Lee, Jehyuk and Shin, Hunsik and Yang, Hoseong and Cho, Sungzoon and Nam, Seung-kwan and Song, Youngmi and Yoon, Jeong-a and Kim, Jong-il},
  journal = {Expert Systems with Applications},
  volume = {128},
  pages = {214--224},
  year = {2019},
  doi = {10.1016/j.eswa.2019.03.042},
  abstract = {This study proposes a champion-challenger analysis framework to compare hybrid ensemble and deep learning models for credit card fraud detection. Evaluated on real-world transaction datasets, the deep learning challenger outperformed the hybrid ensemble champion model across offline and post-launch tests. The approach considers real-world constraints such as investigation limits and asymmetric misclassification costs.},
  keywords = {Credit card fraud detection, Deep learning, Hybrid ensemble, Model evaluation, Class imbalance}
}

@article{Rtayli2020SVMRFE,
  title = {Enhanced Credit Card Fraud Detection Based on SVM-Recursive Feature Elimination and Hyper-Parameters Optimization},
  author = {Rtayli, Naoufal and Enneya, Nourddine},
  journal = {Journal of Information Security and Applications},
  volume = {55},
  pages = {102596},
  year = {2020},
  doi = {10.1016/j.jisa.2020.102596},
  url = {https://doi.org/10.1016/j.jisa.2020.102596},
  abstract = {This paper proposes a hybrid model for credit card fraud detection that combines Recursive Feature Elimination (RFE), Hyper-Parameters Optimization (HPO) using GridSearchCV, and Synthetic Minority Oversampling Technique (SMOTE). The proposed model uses Support Vector Machine and Random Forest classifiers, aiming to improve classification performance by selecting the most predictive features and addressing the class imbalance issue. Experimental results on real-world datasets demonstrate enhanced effectiveness in fraud detection.},
  keywords = {credit card fraud detection, imbalanced data, machine learning, hyperparameters optimization, recursive feature elimination, synthetic minority oversampling technique}
}

@article{Singh2022CSWLB,
  title = {An Efficient Credit Card Fraud Detection Approach Using Cost-Sensitive Weak Learner with Imbalanced Dataset},
  author = {Singh, Ajeet and Jain, Anurag},
  journal = {Computational Intelligence},
  volume = {38},
  number = {6},
  pages = {2035--2055},
  year = {2022},
  doi = {10.1111/coin.12555},
  abstract = {This article proposes an efficient cost-sensitive weak learner approach with a bagging and random forest classifier (CSWLB) to minimize misclassification problems and overcome the class imbalance issue. The CSWLB combines cost-sensitive learning and ensemble methods to reweight fraudulent transactions and apply classifiers on generated weight bags. Experiments using the Brazilian credit card dataset demonstrate the model’s superior performance.},
  keywords = {bagging, cost-sensitive learning, credit card fraud detection, ensemble, sampling, weak learner}
}

@article{Voican2021Deep,
  title = {Credit Card Fraud Detection Using Deep Learning Techniques},
  author = {Voican, Oona},
  journal = {Informatica Economică},
  volume = {25},
  number = {1},
  pages = {70--77},
  year = {2021},
  doi = {10.24818/issn14531305/25.1.2021.06},
  url = {https://www.researchgate.net/publication/350494279_Credit_Card_Fraud_Detection_Using_Deep_Learning_Techniques},
  abstract = {This paper proposes a deep learning-based model to identify credit card fraud by understanding and learning the behavioral patterns of users. By leveraging neural networks trained on real transactional data with one-hot encoding, the model aims to detect impostor behavior in a highly dynamic online environment. The study highlights the importance of user-specific transaction habits and demonstrates how deep learning techniques can efficiently capture complex fraud indicators.},
  keywords = {Artificial Intelligence, Credit Card Fraud, Deep Learning, Neural Network Model, User Behavior}
}
