}

@article{DalPozzolo2018Realistic,
  title = {Credit Card Fraud Detection: A Realistic Modeling and a Novel Learning Strategy},
  author = {Dal Pozzolo, Andrea and Boracchi, Giacomo and Caelen, Olivier and Alippi, Cesare and Bontempi, Gianluca},
  journal = {IEEE Transactions on Neural Networks and Learning Systems},
  volume = {29},
  number = {8},
  pages = {3784--3797},
  year = {2018},
  doi = {10.1109/TNNLS.2017.2736643},
  abstract = {The paper proposes a realistic modeling of credit card fraud detection systems by addressing concept drift, class imbalance, and verification latency. A novel learning strategy is introduced and evaluated using a real-world stream of over 75 million transactions. The study emphasizes realistic performance measures and feedback-based model training.},
